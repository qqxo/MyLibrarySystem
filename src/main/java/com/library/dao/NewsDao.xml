<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.library.dao.NewsDao">
    <select id="showNews" resultType="com.library.bean.New">
        select newsid,note,title from news order by newsid desc
    </select>
<!--    方法名需要保持一致

-->
    <insert id="interNews">
        insert into news(note,title) values (#{note},#{title})
    </insert>


    <select id="findone" resultType="com.library.bean.New">
        select newsid,title,note from news where newsid = #{newsid}
    </select>

    <update id="updateOne">
        UPDATE news SET  newsid = #{newsid},note = #{note}, title = #{title} WHERE newsid = #{newsid};
    </update>

    <delete id="deleteOne">
        delete from news where newsid = #{newsid}
    </delete>


</mapper>